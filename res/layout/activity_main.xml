<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="184dp"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/droplet_reboot"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="24dp"
        android:text="Click2Try" />

    <Button
        android:id="@+id/btnGetRegions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/droplet_reboot"
        android:onClick="getRegions"
        android:text="Get Regions" />

    <Button
        android:id="@+id/btnGetSizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGetRegions"
        android:layout_alignRight="@+id/btnGetRegions"
        android:layout_below="@+id/btnGetRegions"
        android:text="Get Sizes" />

    <Button
        android:id="@+id/btnStartActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/droplet_reboot"
        android:onClick="startActivity"
        android:text="Start 2nd Activity" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGetSizes"
        android:layout_alignRight="@+id/btnGetSizes"
        android:layout_below="@+id/btnGetSizes"
        android:onClick="getImages"
        android:text="Get Images" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStartActivity"
        android:layout_below="@+id/btnStartActivity"
        android:onClick="startActivity"
        android:text="ItemListActivity" />

</RelativeLayout>