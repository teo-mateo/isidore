<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:columnCount="3"
    android:rowCount="18" 
    >

    <TextView
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="0"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:padding="4dp"
        android:text="Droplet size:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/item_region"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <EditText
        android:id="@+id/item_size"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:padding="4dp"
        android:text="Region:"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:padding="4dp"
        android:text="Hostname:"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="3"
        android:padding="4dp"
        android:text="Image:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/item_image"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" >

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="4"
        android:padding="4dp"
        android:text="Backups active:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/item_backup_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="5"
        android:padding="4dp"
        android:text="IP Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_ip"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="5"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="6"
        android:padding="4dp"
        android:text="Private IP Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_private_ip"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="6"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="7"
        android:padding="4dp"
        android:text="Locked:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/item_locked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="8"
        android:padding="4dp"
        android:text="Status:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_status"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="8"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_column="0"
	    android:layout_columnSpan="2"
	    android:layout_row="9"
	    android:orientation="horizontal" >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	      	<ImageButton
		        android:id="@+id/imageButton1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@android:drawable/ic_menu_rotate"
		        android:onClick="rebootDroplet" />

	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Reboot"
	            android:gravity="center_horizontal"
	            android:textSize="10dp" ></TextView>
	    </LinearLayout>
	    

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
		    <ImageButton
		        android:id="@+id/ImageButton01"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@android:drawable/ic_lock_power_off" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Power off"
	            android:gravity="center_horizontal"
	            android:textSize="10dp" ></TextView>		    
	    </LinearLayout>
	    
	   	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	    
		   	<ImageButton
		        android:id="@+id/ImageButton02"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@android:drawable/ic_menu_edit" />
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Rename"
	            android:gravity="center_horizontal"
	            android:textSize="10dp" ></TextView>	   	
	   	
	   	</LinearLayout>

	   	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >	   	
	   		   	
		   	<ImageButton
		        android:id="@+id/ImageButton03"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@android:drawable/ic_menu_delete" />
		   	<TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Destroy"
	            android:gravity="center_horizontal"
	            android:textSize="10dp" ></TextView>
	   	</LinearLayout>
	   	
	  	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >	   	
	   		   	
		   	<ImageButton
		        android:id="@+id/ImageButton04"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/ic_action_new_account" />
		   	<TextView
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="Reset Pwd"
	            android:gravity="center_horizontal"
	            android:textSize="10dp" ></TextView>
	   	</LinearLayout>
	</LinearLayout>


    
</GridLayout>