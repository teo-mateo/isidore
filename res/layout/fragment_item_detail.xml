<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:columnCount="2"
    android:rowCount="18" >

    <TextView
        android:id="@+id/item_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical"
        android:layout_row="0"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:padding="4dp"
        android:text="Droplet size:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/item_region"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <EditText
        android:id="@+id/item_size"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="2"
        android:padding="4dp"
        android:text="Region:"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:padding="4dp"
        android:text="Hostname:"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="3"
        android:padding="4dp"
        android:text="Image:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/item_image"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" >

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="4"
        android:padding="4dp"
        android:text="Backups active:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/item_backup_active"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="5"
        android:padding="4dp"
        android:text="IP Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_ip"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="5"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="6"
        android:padding="4dp"
        android:text="Private IP Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_private_ip"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="6"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="7"
        android:padding="4dp"
        android:text="Locked:"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/item_locked"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left"
        android:layout_row="8"
        android:padding="4dp"
        android:text="Status:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_status"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="8"
        android:padding="4dp"
        android:textIsSelectable="true"
        android:textSize="14sp"
        tools:context=".ItemDetailFragment" />

    <View
    android:layout_width="fill_parent"
    android:layout_row="9"
    android:layout_columnSpan="2"
    android:layout_height="1dp"
    android:padding="4dp"
    android:background="@android:color/darker_gray"/>
    
    
</GridLayout>